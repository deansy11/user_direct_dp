<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <header>
      <h1>Index</h1>
    </header>
    <ul>
      {{ #users }}
        {{ #job }}
          <li>
            <img width"100" src={{ avatar }}>
            <a href="/{{ id }}">
              <h3 class="name">{{ name }}</h3>
            </a>
            <span>{{ job }}, {{ company }}</span>
          </li>
        {{ /job }}
        {{ ^job }}
          <li>
            <img width"100" src={{ avatar }}>
            <a href="/{{ id }}">
              <h3 class="name">{{ name }}</h3>
            </a>
            <span class="noJob">Available for Hire!</span>
          </li>
        {{ /job }}
      {{ /users }}
    </ul>
  </body>
</html>
